<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ProgressBar
      android:indeterminate="true"
      android:id="@+id/syncprogresss"
      android:layout_margin="@dimen/_10sdp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@id/syncprogresss"
        app:layout_constraintTop_toTopOf="@id/syncprogresss"
        app:layout_constraintStart_toEndOf="@id/syncprogresss"
        android:id="@+id/toolbartitle"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:visibility="visible"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/robotoslabregular"
        android:text="Synchronizing"
        android:textColor="@color/subtxtcolor"
        />
  <TextView
      android:id="@+id/progress_txt"
      android:gravity="end"
      android:ems="10"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/syncprogress"
      android:layout_width="wrap_content"
      android:textSize="12sp"
      android:layout_marginEnd="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_10sdp"
      android:layout_height="wrap_content"
      android:backgroundTint="@android:color/transparent"
      android:fontFamily="@font/robotoslabregular"
      android:hint="0%"
      android:textColor="@color/black"
      />
  <ProgressBar
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:id="@+id/syncprogress"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginEnd="@dimen/_10sdp"
      android:layout_marginBottom="@dimen/_10sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/syncprogresss"
      app:layout_constraintStart_toStartOf="@id/syncprogresss"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>