<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightprimary</item>
        <item name="colorPrimaryDark">@color/lightprimarydark</item>

    </style>



    <!-- Use this theme in Manifest by default -->
    <style name="LightTheme" parent="Base.AppTheme.Light"/>

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightprimary</item>
        <item name="colorPrimaryDark">@color/lightprimarydark</item>

        <item name="toolbarbg">#ffffff</item>
        <item name="txttitle">#000000</item>
        <item name="txtcontent">#000000</item>
        <item name="btnbg">#FFF05A50</item>
        <item name="btntxtcolor">#ffffff</item>
        <item name="alerttitlecolor">#FFF05A50</item>
        <item name="iconcolor">#4b4b4b</item>
        <item name="icontintcolor">#4b4b4b</item>
        <item name="titlesubcolor">#4b4b4b</item>
        <item name="bodybg">#FFF0EEE8</item>
        <item name="txtinactiveclr">#4b4b4b</item>
        <item name="colorAccent">#FFF05A50</item>
        <item name="android:windowBackground">#FFF0EEE8</item>
        <item name="android:textColorSecondary">#4b4b4b</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#FF524E4A</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#ffffff</item>
        <item name="bottombarcolor">#ffffff</item>
        <item name="nav_color">#ffffff</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">#FFF05A50</item>

    </style>



    <!-- Use this to switch to Dark theme -->
    <style name="DarkTheme" parent="Base.AppTheme.Dark"/>

    <style name="Base.AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="toolbarbg">#263238</item>
        <item name="txttitle">#ffffff</item>
        <item name="txtcontent">#ffffff</item>
        <item name="btnbg">#ff3d00</item>
        <item name="btntxtcolor">#ffffff</item>
        <item name="alerttitlecolor">#ff3d00</item>
        <item name="iconcolor">#ffffff</item>
        <item name="icontintcolor">#ffffff</item>
        <item name="titlesubcolor">#4b4b4b</item>
        <item name="bodybg">#000000</item>
        <item name="txtinactiveclr">#4b4b4b</item>
        <item name="colorAccent">#ff3d00</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#263238</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#263238</item>
        <item name="bottombarcolor">#263238</item>
        <item name="nav_color">#ffffff</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">#ff3d00</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/lightcoloraccent</item>
        <item name="android:textColorPrimary">@color/subtxtcolor</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="ActionBarTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
<!--        <item name="actionButtonStyle">@style/ActionBar.ActionButton</item>-->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/lightwindoebackground</item>
        <item name="iconTint">@color/lightwindoebackground</item>
    </style>








