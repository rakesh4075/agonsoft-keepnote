    <!-- Use this theme in Manifest by default -->
    <style name="LightTheme" parent="Base.AppTheme.Light"/>

    <style name="Base.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightprimary</item>
        <item name="colorPrimaryDark">@color/lightprimarydark</item>

        <item name="toolbarbg">#ffffff</item>
        <item name="txttitle">#000000</item>
        <item name="txtcontent">#000000</item>
        <item name="btnbg">#FFF05A50</item>
        <item name="btntxtcolor">#ffffff</item>
        <item name="alerttitlecolor">#FFF05A50</item>
        <item name="iconcolor">#4b4b4b</item>
        <item name="icontintcolor">#4b4b4b</item>
        <item name="titlesubcolor">#4b4b4b</item>
        <item name="bodybg">#FFF0EEE8</item>
        <item name="txtinactiveclr">#4b4b4b</item>
        <item name="colorAccent">#FFF05A50</item>
        <item name="android:windowBackground">#FFF0EEE8</item>
        <item name="android:textColorSecondary">#4b4b4b</item>
        <item name="android:statusBarColor">#FF524E4A</item>
        <item name="android:navigationBarColor">#ffffff</item>
        <item name="bottombarcolor">#ffffff</item>
        <item name="nav_color">#ffffff</item>
    </style>



    <!-- Use this to switch to Dark theme -->
    <style name="DarkTheme" parent="Base.AppTheme.Dark"/>

    <style name="Base.AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="toolbarbg">#263238</item>
        <item name="txttitle">#ffffff</item>
        <item name="txtcontent">#ffffff</item>
        <item name="btnbg">#009688</item>
        <item name="btntxtcolor">#ffffff</item>
        <item name="alerttitlecolor">#009688</item>
        <item name="iconcolor">#ffffff</item>
        <item name="icontintcolor">#ffffff</item>
        <item name="titlesubcolor">#4b4b4b</item>
        <item name="bodybg">#000000</item>
        <item name="txtinactiveclr">#4b4b4b</item>
        <item name="colorAccent">#009688</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:statusBarColor">#263238</item>
        <item name="android:navigationBarColor">#263238</item>
        <item name="bottombarcolor">#263238</item>
        <item name="nav_color">#ffffff</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/lightcoloraccent</item>
        <item name="android:textColorPrimary">@color/subtxtcolor</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>


    <style name="ActionBarTheme.Light" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
<!--        <item name="actionButtonStyle">@style/ActionBar.ActionButton</item>-->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/lightwindoebackground</item>
        <item name="iconTint">@color/lightwindoebackground</item>
    </style>


    <declare-styleable name="ColorPickerView"><attr format="dimension" name="colorViewWidth"/><attr format="dimension" name="colorViewHeight"/><attr format="dimension" name="colorViewMarginLeft"/><attr format="dimension" name="colorViewMarginRight"/><attr format="enum" name="colorViewCheckedType">
        <enum name="dot" value="0"/>
        <enum name="checkMark" value="1"/>
    </attr><attr format="reference" name="colors"/></declare-styleable>


    <color name="black">#000000</color>


    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:paddingLeft">@dimen/action_button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/action_button_padding_horizontal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>


    <style name="Theme.Transparent.Permission"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="raksSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">?attr/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/toolbarbg</item>

    </style>
    <style name="ExitDialogTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AppProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowTitleStyle">@style/ExitDialogTitleStyle</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="android:windowFullscreen">false</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--        <item name="android:backgroundDimEnabled">false</item>-->
<!--        <item name="android:windowDisablePreview">true</item>-->
    </style>
</resources>
